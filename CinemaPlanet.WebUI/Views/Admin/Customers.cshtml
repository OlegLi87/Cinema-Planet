@model IEnumerable<CinemaPlanet.Domain.Core.DomainModels.User>
@{
    ViewBag.Title = "Session Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.HeaderText = "Customers List";
    // ViewBag.TargetAction = "Sessions";
    // ViewBag.TargetController = "Admin";
}

@section AddToHead
    {
    <link rel="stylesheet" href="~/Content/CustomStyles/admin/customers.css" />
}

@if (Model.Count() > 0)
{
    <table class="text-warning mx-auto">
        <thead>
            <tr>
                <th>ID</th>
                <th>User Name</th>
                <th>Age</th>
                <th>Total Orders</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@(DateTime.Now.Year - user.BirthDate.Year)</td>
                    <td>@user.Orders.Count</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1 id="notFoundText" class="text-center text-warning">No Costumers Yet For This Session <span class="ml-1 text-nowrap">:(</span></h1>
}



